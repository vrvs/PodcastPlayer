<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
        <import type="br.ufpe.cin.vrvs.podcastplayer.R"/>
        <import type="androidx.core.content.res.ResourcesCompat"/>
        <import type="android.content.res.Resources.Theme"/>
        <import type="android.view.View"/>
        <variable name="viewModel" type="br.ufpe.cin.vrvs.podcastplayer.viewmodel.podcast.PodcastDetailsViewModel"/>
</data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/dark"
    android:layout_height="match_parent">

        <br.ufpe.cin.vrvs.podcastplayer.view.component.loading.LoadingComponent
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:translationZ="90dp"
            android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <br.ufpe.cin.vrvs.podcastplayer.view.component.error.ErrorComponent
            android:id="@+id/error_screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:translationZ="180dp"
            android:visibility="@{viewModel.error.isEmpty() ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:background="@color/dark"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="@{viewModel.loading || !viewModel.error.isEmpty() ? View.GONE : View.VISIBLE}"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                                <br.ufpe.cin.vrvs.podcastplayer.view.component.image.ImageComponent
                                    android:id="@+id/image_cover"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="@drawable/gradient_shape"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>

                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/subscribe_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:backgroundTint="@{ResourcesCompat.getColorStateList(context.resources, viewModel.podcast.subscribed ? R.color.red : R.color.green, (Theme) null)}"
                                    android:src="@{ResourcesCompat.getDrawable(context.resources, viewModel.podcast.subscribed ? R.drawable.ic_remove_white_24dp : R.drawable.ic_add_white_24dp, (Theme) null)}"
                                    android:onClick="@{() -> viewModel.podcast.subscribed ? viewModel.unsubscribePodcast(viewModel.podcast.id) : viewModel.subscribePodcast(viewModel.podcast.id)}"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_margin="20dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxLines="1"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textColor="@color/white"
                                    android:text="@{viewModel.podcast.title}"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxLines="1"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/white"
                                    android:text="@{viewModel.podcast.author}"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:fontFamily="@font/roboto_light"
                                    android:textColor="@color/white"
                                    android:text="@{viewModel.podcast.description}"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxLines="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/white"
                                    android:text="@string/episode_title"
                                    android:textSize="18sp" />

                                <br.ufpe.cin.vrvs.podcastplayer.view.component.episode.EpisodeListComponent
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/episodes_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                        </LinearLayout>



                </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>